<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MiAppCrud.Views.ProductoEditPage"
             Title="Editar Producto">

    <StackLayout Padding="10">
        <Label Text="Nombre del Producto" TextColor="White"/>
        <Entry x:Name="NombreEntry"/>

        <Label Text="Precio" TextColor="White"/>
        <Entry x:Name="PrecioEntry" Keyboard="Numeric"/>

        <Label Text="Categoría" TextColor="White"/>
        <Picker x:Name="CategoriaPicker"/>

        <!-- Botón para guardar producto -->
        <Button Text="Guardar" 
                Clicked="OnSaveClicked"
                BackgroundColor="Purple" 
                TextColor="White"
                Margin="0,20,0,0" />
    </StackLayout>
</ContentPage>
